@model IEnumerable<OnlineShop4DVDS.Models.tbl_Category>

@{
    ViewBag.Title = "ListCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    h2 {
        text-align: center;
        color: black;
        font-weight: 800;
        font-size: 45px;
    }

    p {
        text-align: center;
    }

        p a {
            text-decoration: none;
            color: #cc3333;
            font-size: 20px;
            font-weight: 700;
        }

    table tbody tr th {
        color: black;
        font-size: 20px;
        font-weight: 700;
    }

    table tbody tr td {
        color: black;
        font-size: 18px;
        font-weight: 700;
    }

        table tbody tr td a {
            text-decoration: none;
            color: #cc3333;
            font-size: 18px;
            font-weight: 700;
        }
</style>

<div style="height: 100vh;">

    <h2>Category List</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CatName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "CategoryEdit", new { id = item.CatId }) |
                    @Html.ActionLink("Delete", "MainCatDelete", new { id = item.CatId })
                </td>
            </tr>
        }

    </table>

</div>