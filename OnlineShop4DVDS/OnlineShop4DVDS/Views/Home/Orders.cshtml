@model IEnumerable<OnlineShop4DVDS.Models.tbl_Invoice>

@{
    ViewBag.Title = "Orders";
}

<style>
    h2 {
        text-align: center;
        margin-top: 70px;
        font-size: 45px;
        font-weight: 600;
    }

    p {
        text-align: center;
    }

        p a {
            color: #cc3333;
            text-decoration: none;
            font-size: 18px;
            font-weight: 600;
        }

            p a:hover {
                color: black;

            }

            table tbody tr td a {
                color: #cc3333;
            }
</style>


<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_User.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_User.UserName)
            </td>
            <td>
                @Html.ActionLink("Cencel", "CencelOrder", new { id = item.Invoiceid }) |
            </td>
        </tr>
    }

</table>

