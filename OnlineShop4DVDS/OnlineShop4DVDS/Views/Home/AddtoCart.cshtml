@model OnlineShop4DVDS.Models.tbl_Product

@{
    ViewBag.Title = "AddtoCart";
}

<!Doctype html>
<html>
<head>
    <link href="~/css/Pstyles.css" rel="stylesheet" />
</head>


<style>
    .btn.btn-primary {
        background: #cc3333;
        border: 1px solid #cc3333;
        color: #fff;
    }

    .btn.btn-primary:hover {
        border: 1px solid #cc3333;
        color: #cc3333;
        background-color: transparent;
    }
</style>


<body>
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            @using (Html.BeginForm())
            {
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <input type="hidden" name="id" value="@Model.ProductId" />
                    <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/images/@Model.ProductImage" alt="..." /></div>
                    <div class="col-md-6">
                        <div class="small mb-1">SKU: BST-498</div>
                        <h1 class="display-5 fw-bolder">@Model.tbl_SubCategory.Name</h1>
                        <h2 class="display-5 fw-bolder">@Model.ProductName</h2>
                        <div class="fs-5 mb-5">
                            <span class="text-decoration-line-through">@Model.ProductDesc</span>

                        </div>
                        <p class="lead">@Model.ProductDesc</p>
                        <div class="d-flex">
                            <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 8rem" name="qty" />
                            <input type="submit" name="name" value="Add to Cart" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </section>


    <script src="~/js/Pscripts.js"></script>

</body>
</html>

