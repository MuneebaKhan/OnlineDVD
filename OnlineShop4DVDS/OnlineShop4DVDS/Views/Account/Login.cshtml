@model OnlineShop4DVDS.Models.tbl_User

@{
    Layout = null;
}

<head>
    <link href="~/css/loginStyle.css" rel="stylesheet" />
</head>

<body>

    <section class="form-sec">
        <div class="main-box">
            <div class="title-box">
                <h1> Log In </h1>
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <form role="form">
                    <div class="form-box">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 box-1">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "ip-1", Type = "text", required = "required" })
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "lbl-1" })
                            <span class="fline"></span>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-12 box-1">
                            @Html.TextBoxFor(model => model.Password, new { @class = "ip-1", Type = "password", required = "required" })
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "lbl-1" })
                            <span class="fline"></span>
                        </div>
                        <div class="btn-box">
                            <button class="btn-1" type="submit"> Login </button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </section>

</body>


